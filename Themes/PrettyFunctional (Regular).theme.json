{
    "name": "PrettyFunctional (Regular)",
    "style": "Light",
    "author": [
        {
            "name": "NSSynapse",
            "comment": "For better results, set The Archive's font to 'HelveticaNeue, 13pt' or another variable-width font of choice. For best results, download Apple's San Francisco font and set The Archive's font to 'SFProText-Regular, 13pt'. This theme does not yet get updated via The Archive's Theme Updater, but whenever you see an update for PrettyFunctional (Basic), an updated version of PrettyFunctional (Regular) will be available at: https://forum.zettelkasten.de/discussion/222/theme-prettyfunctional-regular/"
        }
    ],
    "version": "1.3",

    "editor": {
        "backgroundColor": "#fafafa",
        "caretColor": "#0080ff",
        "highlight": {
            "backgroundColor": "#b4d6fd",
            "unfocusedBackgroundColor": "#d7e7f4"
        }
    },
    
    "savedSearchesSidebar": {
        "color": "#fafafa",
        "border": true,
        "backgroundColor": "#606f9f",
        "highlightedBackgroundColor": "#405ebf",
        "iconColors": {
            "default": "#fafafa"
        }
    },

    "resultsList": {
        "color": "#323232",
        "backgroundColor": "#fafafa",
        "alternateBackgroundColor": "#e9e9e9",
        "selection": {
            "color": "#fafafa",
            "backgroundColor": "#405ebf",
            "unfocusedColor": "#fafafa",
            "unfocusedBackgroundColor": "#606f9f"
        },
        "border": true
    },

    "styles": {
        "base": {
            "color": "#323232"
        },

        "h1": {
            "font": { "style": "bold" },
            "color": "#a11212"
        },
        "h2": {
            "font": {  "style": "bold" },
            "color": "#ad1f1f"
        },
        "h3": {
            "font": {  "style": "bold" },
            "color": "#a32929"
        },
        "h4": {
            "font": {  "style": "bold" },
            "color": "#993333"
        },
        "h5": {
            "font": {  "style": "bold" },
            "color": "#993333"
        },
        "h6": {
            "font": {  "style": "bold" },
            "color": "#993333"
        },
        
        "horizontalRule": {
            "color": "#737373"
        },

        "codeBlock": {
            "font": { "name": "Monaco", "size": 12 },
            "color": "#425257",
            "backgroundColor": "#f5f5f5"
        },
        "inlineCode": {
            "font": { "name": "Monaco", "size": 12 },
            "color": "#425257",
            "backgroundColor": "#f5f5f5"
        },
        "blockquote": {
            "color": "#6f582a",
            "backgroundColor": "#f5f5f5"
        },
        "list": {
            "syntax": { "color" : "#323232" }
        },

        "emphasis": {
            "font": {  "style": "italic" }
        },
        "strong": {
            "font": {  "style": "bold" }
        },

        "image": {
            "color": "#737373"
        },
        "link": {
            "color": "#244bc2"
        },
        "referenceDefinition": {
            "color": "#737373"
        },

        "comment": {
            "color": "#b8b8b8",
            "font": {  "style": "regular" }
        },
        
        "footnote": {
            "color": "#069393"
        }
    }
}
