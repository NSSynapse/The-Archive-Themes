{
    "name": "PrettyFunctional (Basic)",
    "style": "Light",
    "author": [
        {
            "name": "NSSynapse (Basil)",
            "comment": "This basic version of the PrettyFunctional theme only contains color settings. The marquee feature of the regular version, to mix a fixed-width font for code elements with a pretty variable-width font such as Helvetica Neue or SF Pro Text for everything else, is missing from this version. You can get the regular version at: https://forum.zettelkasten.de/discussion/222/theme-prettyfunctional-regular/"
        }
    ],
    "version": "1.4",

    "editor": {
        "backgroundColor": "#fafafa",
        "caretColor": "#0d99fc",
        "highlight": {
            "backgroundColor": "#b2d7ff",
            "unfocusedBackgroundColor": "#d7e7f4"
        }
    },
    
    "savedSearchesSidebar": {
        "color": "#fafafa",
        "border": true,
        "backgroundColor": "#0d66a5",
        "highlightedBackgroundColor": "#2b5bee",
        "iconColors": {
            "default": "#fafafa"
        }
    },

    "resultsList": {
        "color": "#414141",
        "backgroundColor": "#fafafa",
        "alternateBackgroundColor": "#ededed",
        "selection": {
            "color": "#fafafa",
            "backgroundColor": "#2b5bee",
            "unfocusedColor": "#fafafa",
            "unfocusedBackgroundColor": "#0d66a5"
        },
        "border": true
    },

    "styles": {
        "base": {
            "color": "#414141"
        },

        "h1": {
            "font": { "style": "bold" },
            "color": "#b0251e"
        },
        "h2": {
            "font": {  "style": "bold" },
            "color": "#bb332e"
        },
        "h3": {
            "font": {  "style": "bold" },
            "color": "#b23d39"
        },
        "h4": {
            "font": {  "style": "bold" },
            "color": "#a94745"
        },
        "h5": {
            "font": {  "style": "bold" },
            "color": "#a94745"
        },
        "h6": {
            "font": {  "style": "bold" },
            "color": "#a94745"
        },
        
        "horizontalRule": {
            "color": "#737373"
        },

        "codeBlock": {
            "color": "#54656a",
            "backgroundColor": "#f5f5f5"
        },
        "inlineCode": {
            "color": "#54656a",
            "backgroundColor": "#f5f5f5"
        },
        "blockquote": {
            "color": "#826a3b",
            "backgroundColor": "#f5f5f5"
        },
        "list": {
            "syntax": { "color" : "#414141" }
        },

        "emphasis": {
            "font": {  "style": "italic" }
        },
        "strong": {
            "font": {  "style": "bold" }
        },

        "image": {
            "color": "#737373"
        },
        "link": {
            "color": "#3266ca"
        },
        "referenceDefinition": {
            "color": "#737373"
        },

        "comment": {
            "color": "#c3c3c3",
            "font": {  "style": "regular" }
        },
        
        "footnote": {
            "color": "#057a7a"
        }
    }
}
